<!DOCTYPE html>
<html>
<head>
  <title>Gender Friendly Adventures</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag :modernizr %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href=<%= image_path("favicon") %>>
  <link rel="icon" href=<%= image_path("favicon") %>>
  <link href='https://fonts.googleapis.com/css?family=Raleway|Amaranth' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
  <div class="wrapper">
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/">Gender Friendly Adventures</a></h1>
        </li>
        <li class="toggle-topbar menu-icon">
          <a href="#"><span>Menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <ul class="left">
          <li class="has-dropdown">
            <%= link_to 'Venues', venues_path %>
            <ul class="dropdown">
              <li><%= link_to 'Add Venue', new_venue_path %></li>
              <li><%= link_to 'Advanced Search', coming_soon_path %></li>
            </ul>
          </li>
          <li><%= form_tag venues_path, method: :get do %>
            <div class="row collapse postfix-round">
              <div class="small-9 columns">
                <%= text_field_tag :q, params[:q],
                  placeholder: 'Quick Search',
                  class: 'transparent' %>
              </div>
              <div class="small-3 columns">
                <%= submit_tag 'Go', class: 'button postfix round' %>
              </div>
            </div>
          <% end %></li>
        </ul>
        <ul class="right">
          <%- if current_user -%>
            <li class="has-dropdown">
              <%= link_to "Signed in as #{current_user.display_name}",
                user_path(current_user) %>
              <ul class="dropdown">
                <li><%= link_to 'My Profile', user_path(current_user) %></li>
                <% if current_user.admin? %>
                  <li><%= link_to 'Admin Dashboard', admin_dashboard_path %></li>
                <% end %>
                <li><%= link_to 'Sign Out', destroy_user_session_path,
                  method: :delete %></li>
              </ul>
            </li>
          <%- else -%>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
          <%- end -%>
        </ul>
      </section>
    </nav>

    <% flash.each do |type, message| %>
      <div data-alert class="alert-box <%= type %>">
        <%= message %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>

    <div class="row main-body">
      <div class="small-12 columns">
        <%= yield %>
      </div>
    </div>
  </div>

  <footer class="footer">
    <div class="row">
      <div class="small-12 columns">
        <ul class="links">
          <li><%= link_to 'About', about_path %></li>
          <li><a href="https://github.com/KellyTeresa/gender-friendly-adventures">Contribute</a></li>
        </ul>
      </div>
    </div>
  </footer>
  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
